<!--
  Launch the route recording node.

  Author: Helio Perroni Filho
-->

<launch>
  <arg name="global_frame" default="map"/>
  <arg name="robot_base_frame" default="base_footprint"/>
  <arg name="save_path" default="$(env PWD)/route.pon"/>
  <node name="teach_route" pkg="roselito_agent" exec="teach_route">
    <param name="global_frame" value="$(var global_frame)"/>
    <param name="robot_base_frame" value="$(var robot_base_frame)"/>
    <param name="save_path" value="$(var save_path)"/>
  </node>
</launch>
